<resources>

	<!-- Base application theme. -->
	<style name = "AppTheme" parent = "Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name = "colorPrimary">@color/colorPrimary</item>
		<item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name = "colorAccent">@color/colorAccent</item>
		<item name = "colorButtonNormal">@color/colorPrimary</item>
	</style>

	<style name = "Header">
		<item name = "android:layout_width">match_parent</item>
		<item name = "android:layout_height">wrap_content</item>
		<item name = "android:textAlignment">center</item>
		<item name = "android:textColor">@color/colorHeader</item>
		<item name = "android:textSize">20sp</item>
	</style>

	<style name = "Header.Teams">
		<item name = "android:fontFamily">sans-serif-medium</item>
		<item name = "android:textSize">22sp</item>
	</style>

	<style name = "Header.Goals">
		<item name = "android:text">@string/goals</item>
	</style>

	<style name = "Header.Fouls">
		<item name = "android:text">@string/fouls</item>
	</style>

	<style name = "Counter">
		<item name = "android:layout_height">wrap_content</item>
		<item name = "android:layout_width">wrap_content</item>
		<item name = "android:fontFamily">sans-serif-light</item>
		<item name = "android:textColor">@color/colorCounter</item>
	</style>

	<style name = "ButtonCounter">
		<item name = "android:layout_width">48dp</item>
		<item name = "android:layout_height">48dp</item>
		<item name = "android:onClick">changeCounter</item>
		<item name = "android:textColor">@color/colorButton</item>
	</style>

	<style name = "ButtonCounter.Minus">
		<item name = "android:layout_marginStart">4dp</item>
		<item name = "android:text">@string/symbol_minus</item>
	</style>

	<style name = "ButtonCounter.Plus">
		<item name = "android:layout_marginEnd">4dp</item>
		<item name = "android:text">@string/symbol_plus</item>
	</style>

</resources>
